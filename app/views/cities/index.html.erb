<center>
  <div>
    <h1 class="title">Spreading awareness of how to patron your local businesses through online channels<h1>
  </div>
</center>
<br>
<br>

<div class="container-fluid">
<p id="notice"><%= notice %></p>
<div class="row">
  <% @cities.each do |city| %>
    <div class="col-md-6 col-lg-4">
      <div class="card shadow-sm mb-3">
        <div class="card-body p-0">
        <%= link_to(city_path(city.slug)) do %>
          <%= image_tag city.image_url, class:"city-bg-image", width: '100%', alt: city.name %>
          <h5 class="card-title city-name"><%=city.name%></h5>
        <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>
